# Silent Signal - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== APPLICATION =====
APP_NAME=Silent Signal
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
API_HOST=0.0.0.0
API_PORT=8000

# ===== DATABASE =====
DATABASE_URL=postgresql://silentsignal:password@localhost:5432/silentsignal_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===== REDIS =====
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ===== CORS =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=True

# ===== WORKOS (Authentication) =====
WORKOS_API_KEY=sk_test_your_workos_api_key
WORKOS_CLIENT_ID=client_your_workos_client_id
WORKOS_REDIRECT_URI=http://localhost:8000/auth/callback
WORKOS_COOKIE_PASSWORD=minimum-32-character-password-for-cookie-encryption

# ===== CEREBRAS (AI Inference) =====
CEREBRAS_API_KEY=your_cerebras_api_key
CEREBRAS_API_URL=https://api.cerebras.ai/v1
CEREBRAS_MODEL=llama3.1-8b

# ===== ELEVENLABS (Text-to-Speech) =====
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_monolingual_v1

# ===== LIQUIDMETAL AI / RAINDROP =====
RAINDROP_API_KEY=your_raindrop_api_key
RAINDROP_API_URL=https://api.raindrop.ai/v1
RAINDROP_SMARTFLOW_ID=your_smartflow_id

# ===== STRIPE (Payments) =====
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_FREE=price_free_tier
STRIPE_PRICE_ID_PREMIUM=price_premium_tier

# ===== SEARCHABLE (Search & Analytics) =====
SEARCHABLE_API_KEY=your_searchable_api_key
SEARCHABLE_INDEX_NAME=silentsignal_gestures
SEARCHABLE_API_URL=https://api.searchable.ai/v1

# ===== VULTR (Deployment) =====
VULTR_API_KEY=your_vultr_api_key
VULTR_INSTANCE_ID=your_instance_id
VULTR_OBJECT_STORAGE_URL=https://your-bucket.vultr-storage.com

# ===== CLOUDFLARE =====
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_ACCOUNT_ID=your_account_id

# ===== NETLIFY (Optional Frontend Hosting) =====
NETLIFY_AUTH_TOKEN=your_netlify_auth_token
NETLIFY_SITE_ID=your_site_id

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=json
